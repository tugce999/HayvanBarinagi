<h1>UserList</h1>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                User List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Users
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    NameSurname
                </th>
                <th>
                    UserName
                </th>
                <th>
                    CreatedAdd
                </th>
                <th>
                    Role
                </th>
                <th>
                    Display Order
                </th>

            </tr>
        </thead>
        <tbody>

            <tr>
                <td>ID</td>
                <td>NameSurname</td>

                <td> UserName</td>
                <td>
                    CreatedAdd
                </td>
               
                <td>
                    Role
                </td>
                <td>
                    Display Order
                </td>
                <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="Edit" asp-route-id="Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        <a asp-controller="Admin" asp-action="Delete" asp-route-id="Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                
        </tbody>
    </table>
</div>