@{
    ViewData["Title"] = Localizer["title"];
}
﻿<style>
     .hero {
         background-image: url('https://l24.im/PUegy 2 '); background-size: cover;
         background-position: center;
         color: black;
         padding: 60px 0;
         text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
     }

     .container {
         max-width: 900px;
         margin: auto;
         text-align: center;
     }

     .text-background {
         background-color: rgba(255, 255, 255, 0.2);
         border-radius: 30px;
         padding: 20px;
         display: inline-block;
     }

     .display-4 {
         font-size: 3rem;
         font-weight: bold;
         color: black;
     }

     .lead {
         color: black;
         font-weight: bold;
         font-size: 1.25rem;
         text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
         transition: background-color 0.2s, color 0.2s;
     }

     }

     .btn-outline-dark {
         border-color: black;
         color: black;
         font-weight: bold;
         transition: background-color 0.2s, color 0.2s;
     }

         .btn-outline-dark:hover {
             background-color: black;
             color: white;
         }
</style>

<div class="hero">
    <div class="container">
        <div class="text-background">
            <h1 class="display-4">@Localizer["Dost Edinin"]</h1>
            <p class="lead">@Localizer["Bir hayvana umut olun!"]</p>
            <a href="/Hayvanlar" class="btn btn-outline-dark btn-lg">@Localizer["Arkadaşını Sahiplen"]</a>
        </div>
    </div>
</div>