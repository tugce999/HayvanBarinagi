@model List<Animal>
<h1>AnimalList</h1>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Animal List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Animals" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Animals
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Age
                </th>
                <th>
                    Color
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>
                        @obj.Age
                    </td>
                    <td>
                        @obj.Color
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Animals" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Animals" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>